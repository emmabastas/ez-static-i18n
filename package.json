{
    "name": "ez-static-i18n",
    "version": "0.1.6",
    "summary": "Let non-technical people contribute to i18n for static websites.",
    "keywords": [],
    "homepage": "https://github.com/emmabastas/ez-static-i18n#readme",
    "repository": "github.com:emmabastas/ez-static-i18n",
    "bugs": {
        "url": "https://github.com/emmabastas/ez-static-i18n/issues",
        "email": "emma.bastas@protonmail.com"
    },
    "license": "AGPL-3.0-or-later",
    "author": "Emma Bast√•s <emma.bastas@protonmail.com>",
    "files": [
        "./lib/**/*.js",
        "./dist/**/*.{js,html,css}"
    ],
    "bin": {
        "ez-static-i18n-server": "./lib/main.js"
    },
    "type": "module",
    "engines": {
        "node": ">=22.6.0"
    },
    "os": [
        "darwin",
        "linux"
    ],
    "scripts": {
        "start": "concurrently --kill-others \"npm run views:serve\" \"node --experimental-strip-types src/main.ts settings.dev.json\"",
        "build": "npm run typescript:build",
        "typescript:build": "tsc --project ./src/tsconfig.json",
        "views:serve": "parcel watch --no-content-hash --no-hmr --dist-dir ./dist/ src/views/**/*.html",
        "views:build": "parcel build --no-content-hash --dist-dir ./dist/ src/views/**/*.html",
        "schemas:build": "node --experimental-strip-types ./src/schemas/compile.ts"
    },
    "dependencies": {
        "@tailwindcss/postcss": "^4.1.13",
        "ajv": "^8.17.1",
        "bcrypt": "^6.0.0",
        "body-parser": "^2.2.0",
        "concurrently": "^9.2.1",
        "connect-redis": "^9.0.0",
        "express": "^5.1.0",
        "express-handlebars": "^8.0.3",
        "express-session": "^1.18.2",
        "mime-types": "^3.0.1",
        "node-html-parser": "^7.0.1",
        "parcel": "^2.16.0",
        "redis": "^5.8.2",
        "redis-om": "^0.4.7",
        "tailwindcss": "^4.1.13"
    },
    "devDependencies": {
        "@types/bcrypt": "^6.0.0",
        "@types/body-parser": "^1.19.6",
        "@types/express": "github:types/npm-express",
        "@types/express-session": "^1.18.2",
        "@types/mime-types": "^3.0.1",
        "json-schema-to-typescript": "^15.0.4",
        "typescript": "^5.9.2"
    }
}
